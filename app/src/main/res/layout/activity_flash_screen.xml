<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/abcs"
    tools:context=".FlashScreenActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/line1"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/red_line"/>
        <View
            android:id="@+id/line2"
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@id/line1"
            android:background="@drawable/white_line"/>
        <View
            android:id="@+id/line3"
            android:layout_width="20dp"
            android:layout_height="250dp"
            android:layout_toRightOf="@id/line2"
            android:background="@drawable/green_line"/>
        <View
            android:id="@+id/line4"
            android:layout_width="20dp"
            android:layout_height="210dp"
            android:layout_toRightOf="@id/line3"
            android:background="@drawable/purple_line"/>
        <View
            android:id="@+id/line5"
            android:layout_width="20dp"
            android:layout_height="190dp"
            android:layout_toRightOf="@id/line4"
            android:background="@drawable/red_line"/>
        <View
            android:id="@+id/line6"
            android:layout_width="20dp"
            android:layout_height="170dp"
            android:layout_toRightOf="@id/line5"
            android:background="@drawable/green_line"/>
        <View
            android:id="@+id/line7"
            android:layout_width="20dp"
            android:layout_height="140dp"
            android:layout_toRightOf="@id/line6"
            android:background="@drawable/white_line"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx1"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="150sp"
            android:text="MOSI"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="220dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tx2"
            android:textStyle="italic"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="WELLCOME TO MOSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>